<?xml version="1.0" encoding="UTF-8"?>
<?xml-model href="http://www.tei-c.org/release/xml/tei/custom/schema/relaxng/tei_odds.rng" type="application/xml" schematypens="http://purl.oclc.org/dsdl/schematron"?>
<?xml-model href="http://www.tei-c.org/release/xml/tei/custom/schema/relaxng/tei_odds.rng" type="application/xml" schematypens="http://relaxng.org/ns/structure/1.0"?>
<div xmlns="http://www.tei-c.org/ns/1.0"
     xmlns:tei="http://www.tei-c.org/ns/1.0"
     xmlns:xi="http://www.w3.org/2001/XInclude">
   <specGrp xml:id="module.MEI.ptrref">
      <moduleSpec xmlns:rng="http://relaxng.org/ns/structure/1.0"
                  xmlns:sch="http://purl.oclc.org/dsdl/schematron"
                  xmlns:a="http://relaxng.org/ns/compatibility/annotations/1.0"
                  ident="MEI.ptrref"
                  mode="add"
                  predeclare="false">
         <desc>Pointer and reference component declarations.</desc>
      </moduleSpec>
      <classSpec xmlns:rng="http://relaxng.org/ns/structure/1.0"
                 xmlns:sch="http://purl.oclc.org/dsdl/schematron"
                 xmlns:a="http://relaxng.org/ns/compatibility/annotations/1.0"
                 ident="model.locrefLike"
                 module="MEI.ptrref"
                 type="model"
                 mode="add"
                 predeclare="false">
         <desc>Groups elements used for purposes of location and reference.</desc>
         <classes mode="replace">
            <memberOf key="model.textPhraseLike.limited" mode="add"/>
         </classes>
      </classSpec>
      <elementSpec xmlns:rng="http://relaxng.org/ns/structure/1.0"
                   xmlns:sch="http://purl.oclc.org/dsdl/schematron"
                   xmlns:a="http://relaxng.org/ns/compatibility/annotations/1.0"
                   ident="ptr"
                   module="MEI.ptrref"
                   mode="add"
                   predeclare="false"
                   ns="http://www.tei-c.org/ns/1.0">
         <desc>(pointer) – Defines a traversible pointer to another location, using only attributes to
        describe the destination.</desc>
         <classes mode="replace">
            <memberOf key="att.common" mode="add"/>
            <memberOf key="att.internetMedia" mode="add"/>
            <memberOf key="att.metadataPointing" mode="add"/>
            <memberOf key="att.pointing" mode="add"/>
            <memberOf key="att.targetEval" mode="add"/>
            <memberOf key="model.locrefLike" mode="add"/>
         </classes>
         <content autoPrefix="true">
            <rng:empty/>
         </content>
         <remarks>
            <p part="N">Unlike the <gi scheme="MEI">ref</gi> element, <gi scheme="MEI">ptr</gi> cannot contain
          text or sub-elements to describe the referenced object.</p>
         </remarks>
         <remarks>
            <p part="N">This element is modelled on elements in the Encoded Archival Description (EAD) and Text
          Encoding Initiative (TEI) standards.</p>
         </remarks>
      </elementSpec>
      <elementSpec xmlns:rng="http://relaxng.org/ns/structure/1.0"
                   xmlns:sch="http://purl.oclc.org/dsdl/schematron"
                   xmlns:a="http://relaxng.org/ns/compatibility/annotations/1.0"
                   ident="ref"
                   module="MEI.ptrref"
                   mode="add"
                   predeclare="false"
                   ns="http://www.tei-c.org/ns/1.0">
         <desc>(reference) – Defines a traversible reference to another location. May contain text and
        sub-elements that describe the destination.</desc>
         <classes mode="replace">
            <memberOf key="att.common" mode="add"/>
            <memberOf key="att.internetMedia" mode="add"/>
            <memberOf key="att.lang" mode="add"/>
            <memberOf key="att.metadataPointing" mode="add"/>
            <memberOf key="att.pointing" mode="add"/>
            <memberOf key="att.targetEval" mode="add"/>
            <memberOf key="model.locrefLike" mode="add"/>
         </classes>
         <content autoPrefix="true">
            <rng:zeroOrMore>
               <rng:choice>
                  <rng:text/>
                  <rng:ref name="model.textPhraseLike"/>
               </rng:choice>
            </rng:zeroOrMore>
         </content>
         <remarks>
            <p part="N">Unlike the <gi scheme="MEI">ptr</gi> element, <gi scheme="MEI">ref</gi> may contain text
          and sub-elements to describe the destination.</p>
         </remarks>
         <remarks>
            <p part="N">This element is modelled on elements in the Encoded Archival Description (EAD) and TEI
          standards.</p>
         </remarks>
      </elementSpec>
   </specGrp>
</div>
