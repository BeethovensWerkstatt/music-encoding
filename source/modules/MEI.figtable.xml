<?xml version="1.0" encoding="UTF-8"?>
<?xml-model href="http://www.tei-c.org/release/xml/tei/custom/schema/relaxng/tei_odds.rng" type="application/xml" schematypens="http://purl.oclc.org/dsdl/schematron"?>
<?xml-model href="http://www.tei-c.org/release/xml/tei/custom/schema/relaxng/tei_odds.rng" type="application/xml" schematypens="http://relaxng.org/ns/structure/1.0"?>
<div xmlns="http://www.tei-c.org/ns/1.0"
     xmlns:tei="http://www.tei-c.org/ns/1.0"
     xmlns:xi="http://www.w3.org/2001/XInclude">
   <specGrp xml:id="module.MEI.figtable">
      <moduleSpec xmlns:rng="http://relaxng.org/ns/structure/1.0"
                  xmlns:sch="http://purl.oclc.org/dsdl/schematron"
                  xmlns:a="http://relaxng.org/ns/compatibility/annotations/1.0"
                  ident="MEI.figtable"
                  mode="add"
                  predeclare="false">
         <desc>Figures and tables component declarations.</desc>
      </moduleSpec>
      <classSpec xmlns:rng="http://relaxng.org/ns/structure/1.0"
                 xmlns:sch="http://purl.oclc.org/dsdl/schematron"
                 xmlns:a="http://relaxng.org/ns/compatibility/annotations/1.0"
                 ident="att.tabular"
                 module="MEI.figtable"
                 type="atts"
                 mode="add"
                 predeclare="false">
         <desc>Attributes shared by table cells.</desc>
         <attList org="group">
            <attDef ident="colspan"
                    usage="opt"
                    mode="add"
                    predeclare="false"
                    ns="http://www.tei-c.org/ns/1.0">
               <desc>The number of columns spanned by this cell.</desc>
               <datatype minOccurs="1" maxOccurs="1">
                  <rng:data type="positiveInteger"/>
               </datatype>
            </attDef>
            <attDef ident="rowspan"
                    usage="opt"
                    mode="add"
                    predeclare="false"
                    ns="http://www.tei-c.org/ns/1.0">
               <desc>The number of rows spanned by this cell.</desc>
               <datatype minOccurs="1" maxOccurs="1">
                  <rng:data type="positiveInteger"/>
               </datatype>
            </attDef>
         </attList>
      </classSpec>
      <classSpec xmlns:rng="http://relaxng.org/ns/structure/1.0"
                 xmlns:sch="http://purl.oclc.org/dsdl/schematron"
                 xmlns:a="http://relaxng.org/ns/compatibility/annotations/1.0"
                 ident="model.figDescLike"
                 module="MEI.figtable"
                 type="model"
                 mode="add"
                 predeclare="false">
         <desc>Groups elements that provide a brief prose description of the appearance or content of a
        graphic figure.</desc>
      </classSpec>
      <classSpec xmlns:rng="http://relaxng.org/ns/structure/1.0"
                 xmlns:sch="http://purl.oclc.org/dsdl/schematron"
                 xmlns:a="http://relaxng.org/ns/compatibility/annotations/1.0"
                 ident="model.figureLike"
                 module="MEI.figtable"
                 type="model"
                 mode="add"
                 predeclare="false">
         <desc>Groups elements representing or containing graphic information such as an illustration
        or figure.</desc>
         <classes mode="replace">
            <memberOf key="model.textPhraseLike.limited" mode="add"/>
         </classes>
      </classSpec>
      <classSpec xmlns:rng="http://relaxng.org/ns/structure/1.0"
                 xmlns:sch="http://purl.oclc.org/dsdl/schematron"
                 xmlns:a="http://relaxng.org/ns/compatibility/annotations/1.0"
                 ident="model.graphicLike"
                 module="MEI.figtable"
                 type="model"
                 mode="add"
                 predeclare="false">
         <desc>Groups elements that indicate the location of an inline graphic, illustration, or
        figure.</desc>
      </classSpec>
      <classSpec xmlns:rng="http://relaxng.org/ns/structure/1.0"
                 xmlns:sch="http://purl.oclc.org/dsdl/schematron"
                 xmlns:a="http://relaxng.org/ns/compatibility/annotations/1.0"
                 ident="model.tableLike"
                 module="MEI.figtable"
                 type="model"
                 mode="add"
                 predeclare="false">
         <desc>Groups table-like elements.</desc>
         <classes mode="replace">
            <memberOf key="model.paracontentPart" mode="add"/>
            <memberOf key="model.textComponentLike" mode="add"/>
         </classes>
      </classSpec>
      <elementSpec xmlns:rng="http://relaxng.org/ns/structure/1.0"
                   xmlns:sch="http://purl.oclc.org/dsdl/schematron"
                   xmlns:a="http://relaxng.org/ns/compatibility/annotations/1.0"
                   ident="fig"
                   module="MEI.figtable"
                   mode="add"
                   predeclare="false"
                   ns="http://www.tei-c.org/ns/1.0">
         <desc>(figure) – Groups elements representing or containing graphic information such as an
        illustration or figure.</desc>
         <classes mode="replace">
            <memberOf key="att.common" mode="add"/>
            <memberOf key="att.facsimile" mode="add"/>
            <memberOf key="att.xy" mode="add"/>
            <memberOf key="model.figureLike" mode="add"/>
         </classes>
         <content autoPrefix="true">
            <rng:zeroOrMore>
               <rng:choice>
                  <rng:ref name="figDesc"/>
                  <rng:ref name="model.captionLike"/>
                  <rng:ref name="model.graphicLike"/>
                  <rng:ref name="model.scoreLike"/>
               </rng:choice>
            </rng:zeroOrMore>
         </content>
         <remarks>
            <p part="N">This element is modelled on the figure element in the Text Encoding Initiative (TEI)
          standard.</p>
         </remarks>
      </elementSpec>
      <elementSpec xmlns:rng="http://relaxng.org/ns/structure/1.0"
                   xmlns:sch="http://purl.oclc.org/dsdl/schematron"
                   xmlns:a="http://relaxng.org/ns/compatibility/annotations/1.0"
                   ident="figDesc"
                   module="MEI.figtable"
                   mode="add"
                   predeclare="false"
                   ns="http://www.tei-c.org/ns/1.0">
         <desc>(figure description) – Contains a brief prose description of the appearance or content
        of a graphic figure, for use when documenting an image without displaying it.</desc>
         <classes mode="replace">
            <memberOf key="att.common" mode="add"/>
            <memberOf key="att.lang" mode="add"/>
            <memberOf key="model.figDescLike" mode="add"/>
         </classes>
         <content autoPrefix="true">
            <rng:zeroOrMore>
               <rng:choice>
                  <rng:text/>
                  <rng:ref name="model.textComponentLike"/>
                  <rng:ref name="model.textPhraseLike.limited"/>
               </rng:choice>
            </rng:zeroOrMore>
         </content>
         <constraintSpec ident="figDesc_content_constraint"
                         scheme="isoschematron"
                         mode="add"
                         predeclare="false">
            <constraint>
               <sch:rule context="mei:figDesc[mei:lg or mei:p or mei:quote or mei:table]">
                  <sch:assert test="not(*[../text()[normalize-space()]])">Mixed content is not allowed
              when lg, p, quote, or table is used.</sch:assert>
                  <sch:assert test="not(*[not(local-name() eq 'biblList' or local-name() eq 'castList' or                local-name() eq 'lg' or local-name() eq 'list' or local-name() eq 'p' or                local-name() eq 'quote' or local-name() eq 'table')])">Unstructured text not allowed when lg, p, quote, or table elements are
              used.</sch:assert>
               </sch:rule>
            </constraint>
         </constraintSpec>
         <remarks>
            <p part="N">Best practice suggests the use of controlled vocabulary for figure descriptions. Don't
          confuse this entity with a figure caption. A caption is text primarily intended for
          display with an illustration. It may or may not function as a description of the
          illustration.</p>
         </remarks>
         <remarks>
            <p part="N">This element is modelled on an element in the Text Encoding Initiative (TEI)
          standard.</p>
         </remarks>
      </elementSpec>
      <elementSpec xmlns:rng="http://relaxng.org/ns/structure/1.0"
                   xmlns:sch="http://purl.oclc.org/dsdl/schematron"
                   xmlns:a="http://relaxng.org/ns/compatibility/annotations/1.0"
                   ident="graphic"
                   module="MEI.figtable"
                   mode="add"
                   predeclare="false"
                   ns="http://www.tei-c.org/ns/1.0">
         <desc>Indicates the location of an inline graphic.</desc>
         <classes mode="replace">
            <memberOf key="att.common" mode="add"/>
            <memberOf key="att.dimensions" mode="add"/>
            <memberOf key="att.internetMedia" mode="add"/>
            <memberOf key="att.facsimile" mode="add"/>
            <memberOf key="att.metadataPointing" mode="add"/>
            <memberOf key="att.pointing" mode="add"/>
            <memberOf key="att.startId" mode="add"/>
            <memberOf key="att.visualOffset" mode="add"/>
            <memberOf key="model.graphicLike" mode="add"/>
         </classes>
         <content autoPrefix="true">
            <rng:zeroOrMore>
               <rng:ref name="zone"/>
            </rng:zeroOrMore>
         </content>
         <constraintSpec ident="graphic_attributes"
                         scheme="isoschematron"
                         mode="add"
                         predeclare="false">
            <constraint>
               <sch:rule context="mei:zone/mei:graphic">
                  <sch:assert role="warning" test="count(mei:*) = 0">Graphic child of zone should not have
              children.</sch:assert>
               </sch:rule>
               <sch:rule context="mei:symbolDef/mei:graphic">
                  <sch:assert role="warning" test="@startid or (@ulx and @uly)">Graphic should have either
              a startid attribute or ulx and uly attributes.</sch:assert>
               </sch:rule>
               <sch:rule context="mei:graphic[not(ancestor::mei:symbolDef or ancestor::mei:zone)]">
                  <sch:assert role="warning" test="not(@ulx or @uly)">Graphic should not have @ulx or @uly
              attributes.</sch:assert>
                  <sch:assert role="warning" test="not(@ho or @vo)">Graphic should not have @ho or @vo
              attributes.</sch:assert>
               </sch:rule>
            </constraint>
         </constraintSpec>
         <attList org="group">
            <attDef ident="ulx"
                    usage="opt"
                    mode="add"
                    predeclare="false"
                    ns="http://www.tei-c.org/ns/1.0">
               <desc>Indicates the upper-left corner x coordinate.</desc>
               <datatype minOccurs="1" maxOccurs="1">
                  <rng:data type="nonNegativeInteger"/>
               </datatype>
            </attDef>
            <attDef ident="uly"
                    usage="opt"
                    mode="add"
                    predeclare="false"
                    ns="http://www.tei-c.org/ns/1.0">
               <desc>Indicates the upper-left corner y coordinate.</desc>
               <datatype minOccurs="1" maxOccurs="1">
                  <rng:data type="nonNegativeInteger"/>
               </datatype>
            </attDef>
         </attList>
         <remarks>
            <p part="N">This element is modelled on an element in the Text Encoding Initiative (TEI)
          standard.</p>
         </remarks>
      </elementSpec>
      <elementSpec xmlns:rng="http://relaxng.org/ns/structure/1.0"
                   xmlns:sch="http://purl.oclc.org/dsdl/schematron"
                   xmlns:a="http://relaxng.org/ns/compatibility/annotations/1.0"
                   ident="table"
                   module="MEI.figtable"
                   mode="add"
                   predeclare="false"
                   ns="http://www.tei-c.org/ns/1.0">
         <desc>Contains text displayed in tabular form.</desc>
         <classes mode="replace">
            <memberOf key="att.common" mode="add"/>
            <memberOf key="att.facsimile" mode="add"/>
            <memberOf key="att.lang" mode="add"/>
            <memberOf key="att.xy" mode="add"/>
            <memberOf key="model.tableLike" mode="add"/>
         </classes>
         <content autoPrefix="true">
            <rng:optional>
               <rng:ref name="model.captionLike"/>
            </rng:optional>
            <rng:oneOrMore>
               <rng:ref name="tr"/>
            </rng:oneOrMore>
            <rng:optional>
               <rng:ref name="model.captionLike"/>
            </rng:optional>
         </content>
         <remarks>
            <p part="N">This element is modelled on elements in the Encoded Archival Description (EAD), Text
          Encoding Initiative (TEI), and HTML standards.</p>
         </remarks>
      </elementSpec>
      <elementSpec xmlns:rng="http://relaxng.org/ns/structure/1.0"
                   xmlns:sch="http://purl.oclc.org/dsdl/schematron"
                   xmlns:a="http://relaxng.org/ns/compatibility/annotations/1.0"
                   ident="td"
                   module="MEI.figtable"
                   mode="add"
                   predeclare="false"
                   ns="http://www.tei-c.org/ns/1.0">
         <desc>(table data) – Designates a table cell that contains data as opposed to a cell that
        contains column or row heading information.</desc>
         <classes mode="replace">
            <memberOf key="att.common" mode="add"/>
            <memberOf key="att.facsimile" mode="add"/>
            <memberOf key="att.lang" mode="add"/>
            <memberOf key="att.xy" mode="add"/>
            <memberOf key="att.tabular" mode="add"/>
         </classes>
         <content autoPrefix="true">
            <rng:zeroOrMore>
               <rng:choice>
                  <rng:text/>
                  <rng:ref name="model.textComponentLike"/>
                  <rng:ref name="model.textPhraseLike"/>
                  <rng:ref name="model.editLike"/>
                  <rng:ref name="model.transcriptionLike"/>
               </rng:choice>
            </rng:zeroOrMore>
         </content>
         <remarks>
            <p part="N">The <att scheme="TEI">colspan</att> and <att scheme="TEI">rowspan</att> attributes record tabular display rendering
          information.</p>
         </remarks>
         <remarks>
            <p part="N">This element is modelled on an element in the HTML standard.</p>
         </remarks>
      </elementSpec>
      <elementSpec xmlns:rng="http://relaxng.org/ns/structure/1.0"
                   xmlns:sch="http://purl.oclc.org/dsdl/schematron"
                   xmlns:a="http://relaxng.org/ns/compatibility/annotations/1.0"
                   ident="th"
                   module="MEI.figtable"
                   mode="add"
                   predeclare="false"
                   ns="http://www.tei-c.org/ns/1.0">
         <desc>(table header) – Designates a table cell containing column or row heading information as
        opposed to one containing data.</desc>
         <classes mode="replace">
            <memberOf key="att.common" mode="add"/>
            <memberOf key="att.facsimile" mode="add"/>
            <memberOf key="att.lang" mode="add"/>
            <memberOf key="att.xy" mode="add"/>
            <memberOf key="att.tabular" mode="add"/>
         </classes>
         <content autoPrefix="true">
            <rng:zeroOrMore>
               <rng:choice>
                  <rng:text/>
                  <rng:ref name="model.textComponentLike"/>
                  <rng:ref name="model.textPhraseLike"/>
                  <rng:ref name="model.editLike"/>
                  <rng:ref name="model.transcriptionLike"/>
               </rng:choice>
            </rng:zeroOrMore>
         </content>
         <remarks>
            <p part="N">The <att scheme="TEI">colspan</att> and <att scheme="TEI">rowspan</att> attributes record tabular display rendering
          information.</p>
         </remarks>
         <remarks>
            <p part="N">This element is modelled on an element in the HTML standard.</p>
         </remarks>
      </elementSpec>
      <elementSpec xmlns:rng="http://relaxng.org/ns/structure/1.0"
                   xmlns:sch="http://purl.oclc.org/dsdl/schematron"
                   xmlns:a="http://relaxng.org/ns/compatibility/annotations/1.0"
                   ident="tr"
                   module="MEI.figtable"
                   mode="add"
                   predeclare="false"
                   ns="http://www.tei-c.org/ns/1.0">
         <desc>(table row) – A formatting element that contains one or more cells (intersection of a
        row and a column) in a <gi scheme="MEI">table</gi>.</desc>
         <classes mode="replace">
            <memberOf key="att.common" mode="add"/>
            <memberOf key="att.facsimile" mode="add"/>
            <memberOf key="att.lang" mode="add"/>
            <memberOf key="att.xy" mode="add"/>
         </classes>
         <content autoPrefix="true">
            <rng:zeroOrMore>
               <rng:choice>
                  <rng:ref name="th"/>
                  <rng:ref name="td"/>
               </rng:choice>
            </rng:zeroOrMore>
         </content>
         <remarks>
            <p part="N">More precise rendition of the table and its cells can be specified in a style sheet.</p>
         </remarks>
         <remarks>
            <p part="N">This element is modelled on an element in the HTML standard.</p>
         </remarks>
      </elementSpec>
   </specGrp>
</div>
